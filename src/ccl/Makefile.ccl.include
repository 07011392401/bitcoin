# printdb binary 
# 

printdb_SOURCES = ccl/printdb.cpp
printdb_CPPFLAGS = $(BITCOIN_INCLUDES)

printdb_LDADD = \
   $(LIBBITCOIN_SERVER) \
   $(LIBBITCOIN_COMMON) \
   $(LIBBITCOIN_UNIVALUE) \
   $(LIBBITCOIN_UTIL) \
   $(LIBBITCOIN_CRYPTO) \
   $(LIBLEVELDB) \
   $(LIBMEMENV) \
   $(LIBBITCOIN_WALLET) \
